<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context=".activities.HODActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="35sp"
            android:text="Welcome,"
            android:textStyle="bold"
            android:fontFamily="monospace"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/jec_scholarship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:textSize="30sp"
            android:layout_marginEnd="25dp"
            android:text="to the JEC Scholarship Portal"
            android:textStyle="bold"
            android:fontFamily="monospace"
            app:layout_constraintTop_toBottomOf="@id/welcome"
            />

        <ImageView
            android:id="@+id/jec_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_jec"
            app:layout_constraintTop_toBottomOf="@id/jec_scholarship"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text=""
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/jec_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="serif"/>


        <TextView
            android:id="@+id/tv_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_marginEnd="25dp"
            android:text="(HOD)"
            android:textStyle="bold"
            android:fontFamily="monospace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_see_applications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:textSize="30sp"
            android:background="@drawable/shape_button_rounded"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:text="See Applications"
            android:paddingVertical="10dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            app:layout_constraintTop_toBottomOf="@id/tv_apply"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:textSize="30sp"
            android:background="@drawable/shape_button_rounded"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:text="Logout"
            android:paddingVertical="10dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            app:layout_constraintTop_toBottomOf="@id/btn_see_applications"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>